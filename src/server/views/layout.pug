doctype html
html(lang='en')
  head
    if head && head.title
      != head.title.toString()
    if head && head.meta
      != head.meta.toString()

    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')

    link(
      href='http://fonts.googleapis.com/css?family=Roboto:300,400,500'
      rel='stylesheet'
      type='text/css'
    )

    block style

  body
    block main

    block script
