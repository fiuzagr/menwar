/**
 * Vertical Rhythm stylus
 *
 * Variables
 */

// base size for ks-rem function
ks-rem-base = 18px


/**
 * Vertical Rhythm stylus
 *
 * Functions
 */

lines(num)
  (1.5rem * num)


/**
 * Vertical Rhythm stylus
 *
 * Mixins
 */

modular-font(size, l=1)
  font-size ks-modular-scale(1rem, size, ks-golden)
  line-height lines(l)


base-font(factor=0)
  // redefine base
  if factor != 0
    ks-rem-base = (ks-rem-base + factor)

  font-size ks-rem-base
  line-height lines(1)


smaller()
  modular-font -0.8

xx-small()
  modular-font -0.6

x-small()
  modular-font -0.4

small()
  modular-font -0.2

medium()
  modular-font 0

large()
  modular-font 1, 2

x-large()
  modular-font 2, 2

xx-large()
  modular-font 3, 3

larger()
  modular-font 4, 3
