// pace.js theme

.pace
  -webkit-pointer-events none
  pointer-events none

  -webkit-user-select none
  -moz-user-select none
  user-select none

  .pace-progress
    background $accent-color
    position fixed
    z-index 2000
    top 0
    right 100%
    width 100%
    height 4px


.pace-inactive
  display none
